<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="00 :00"
            android:textsize="180sp"
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="207dp" tools:layout_editor_absoluteX="186dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/button_start_pause"
            android:text="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="257dp" tools:layout_editor_absoluteX="161dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/button_reset"
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:layout_editor_absoluteY="320dp" tools:layout_editor_absoluteX="161dp"
            tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>